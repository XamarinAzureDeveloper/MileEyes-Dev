<?xml version="1.0" encoding="UTF-8"?>
<ViewCell IsEnabled="{Binding Loaded}" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MileEyes.CustomControls.CustomJourneyCell">
  <StackLayout Orientation="Horizontal" Padding="10, 7.5, 0, 7.5" HorizontalOptions="FillAndExpand">
    <StackLayout Orientation="Vertical" Padding="0, 0, 0, 0" VerticalOptions="Center">
      <StackLayout Orientation="Vertical" Padding="0, 0, 5, 0" Spacing="15">
        <Image Source="gps_icon.png" IsVisible="{Binding Gps}" />
        <Image Source="manual_record_icon.png" IsVisible="{Binding Manual}" />
        <Image Source="Accepted_Flag.png" IsVisible="{Binding Accepted}" />
      </StackLayout>
    </StackLayout>
    <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
